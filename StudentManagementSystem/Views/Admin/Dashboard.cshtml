@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1 class="text-center mb-4">Admin Dashboard</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Course Management</h5>
                    <p class="card-text">Manage and view courses</p>
                    <a href="@Url.Action("CourseManagement", "Admin")" class="btn btn-primary">Manage Courses</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Assign Courses</h5>
                    <p class="card-text">Assign courses to students</p>
                    <a href="@Url.Action("AssignCourse", "Admin")" class="btn btn-success">Assign Courses</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage users and roles</p>
                    <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-warning">Manage Users</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}