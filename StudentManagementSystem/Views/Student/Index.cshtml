@model List<StudentManagementSystem.Models.Entities.Enrollment>
@{
    ViewData["Title"] = "Trang Học Sinh";
}
<h2>Chào mừng đến trang Học Sinh</h2>
<table>
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Semester</th>
            <th>Academic Year</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>
                <td>@enrollment.CourseId</td>
                <td>@enrollment.Course?.CourseName</td> <!-- Ensure Course is loaded -->
                <td>@enrollment.Semester</td>
                <td>@enrollment.AcademicYear</td>
                <td>@enrollment.Grade</td>
            </tr>
        }
    </tbody>
</table>